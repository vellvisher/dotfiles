# ls
if [[ "$(uname)" == "Darwin" ]]; then
    export CLICOLOR=1
    export LSCOLORS=GxFxCxDxBxegedabagaced
    COLOR_COMMAND=' -G'
    alias ctags="`brew --prefix`/bin/ctags"
elif [[ "$(expr substr $(uname -s) 1 5)" == "Linux" ]]; then
    COLOR_COMMAND=' --color=auto'
    alias gsort='sort'
fi
DEFAULT_LS=' -Fh'$COLOR_COMMAND

alias l='ls'$DEFAULT_LS
alias ls='ls'$DEFAULT_LS
alias ll='ls -l'$DEFAULT_LS
alias la='ls -a'$DEFAULT_LS
alias lla='ls -la'$DEFAULT_LS
alias lh='ls -d'$DEFAULT_LS' .*'

# cd
alias ..='cd ..'

# grep
alias grep='grep --color=auto'

# mkdir
alias mkdir='mkdir -pv'

# install colordiff
alias diff='colordiff'

# vim as default
alias v='vim'
alias vi='vim'
alias svi='sudo vi'
# alias vis='vim "+set si"'
alias edit='vim'

alias vd='vimdiff'

alias e='emacs'

# color tree
# alias tree='tree -C'

# better du
alias du.='du -h -d 0 * . | gsort -h'

# git alias
alias g=git
alias gr='if [ "`git rev-parse --show-cdup`" != "" ]; then cd `git rev-parse --show-cdup`; fi'
alias gg='git g'
alias gdd='git d'
alias gdc='git d --cached'

dev() {
    cd $HOME/dev/$1
}

# tmux
alias tmux="TERM=screen-256color-bce tmux"

alias ta='tmux attach -t ""'
alias ts='tmux new-session -s'
alias tl='tmux list-sessions'

# todotxt
alias t="tmux"

# exit shortcut
alias q='exit'

# zshrc
alias zrc='source $HOME/.zshrc'

# ps suffix
alias p='ps -ef | grep -i'

# grep global alias
alias -g G='|& grep -i'

# activate zmv and give mmv
autoload -U zmv
alias mmv='noglob zmv -W'

alias c="cat"
